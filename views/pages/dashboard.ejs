<!DOCTYPE html>
<html>

  <head>
    <%- include ../partials/meta -%>
    <link rel="stylesheet" type="text/css" href="/css/pages/dashboard.css">
    <title>Dashboard</title>
  </head>

  <body>
    <%- include ../partials/header -%>
    <nav>
      <a class="active" href="<%= urlDash %>">Live dashboard</a>
      <a href="<%= urlAppl %>">Appliances</a>
    </nav>
    <main>
      <h1><%= festival %></h1>
      <section>
        <h1>Consumed</h1>
        <article class="progress-bar">
          <span style="width: 0%"></span>
        </article>
      </section>
      <section>
        <h1>Appliances</h1>
        <article class="appliances">
          <div>
            <h1>Espressomachine</h1>
            <canvas class="charts"></div>
          </div>
        </article>
      </section>
    </main>
    <%- include ../partials/footer -%>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.min.js" charset="utf-8"></script>
    <script>
      var appliances = document.getElementsByClassName('charts');

      var socket = io();

      var delta = 0;
      var currentBarWidth = 0;

      socket.on('value', function (value) {
        delta = value / 100;
        updateChart(value);
      });

      setInterval(function () {
        currentBarWidth += delta;
        document.querySelector('.progress-bar span').style.width = currentBarWidth + '%';
      }, 1000);

      var chart = new Chart(appliances[0], {
        type: 'doughnut',
        options: {
            animation: false
        },
        data: {
          labels: [
            'Good',
            'Oke',
            'Bad'
          ],
          datasets: [{
            data: [0, 0, 0, 100],
            backgroundColor: [
              'hsl(145, 67%, 60%)',
              'hsl(48, 90%, 65%)',
              'hsl(351, 87%, 65%)',
              'transparent'
            ],
            hoverBackgroundColor: [
              'hsl(145, 67.4%, 46.9%)',
              'hsl(48, 90%, 51%)',
              'hsl(351, 87%, 56%)',
              'transparent'
            ]
          }]
        }
      });

      /**
       * Replace the doughnut chart with a new one with updated data
       * @param  {Number} value Filled percentage
       */
      function updateChart(value) {
        value = Number(value);
        chart.destroy();

        var data = [];

        // This could probably be done nicer with something like %
        //   but time constraints..  ¯\_(ツ)_/¯
        if (value > 33.3 && value < 66.6) {
          data[0] = 33.3;
          data[1] = value - 33.3;
          data[2] = 0;
        } else if (value > 66.6) {
          data[0] = 33.3;
          data[1] = 33.3;
          data[2] = value - 66.6;
        } else {
          data[0] = value;
          data[1] = 0;
          data[2] = 0;
        }

        data[3] = 100 - data[0] - data[1] - data[2];

        chart = new Chart(appliances[0], {
          type: 'doughnut',
          options: {
              animation: false
          },
          data: {
            labels: [
              'Good',
              'Oke',
              'Bad'
            ],
            datasets: [{
              data: data,
              backgroundColor: [
                'hsl(145, 67%, 60%)',
                'hsl(48, 90%, 65%)',
                'hsl(351, 87%, 65%)',
                'transparent'
              ],
              hoverBackgroundColor: [
                'hsl(145, 67.4%, 46.9%)',
                'hsl(48, 90%, 51%)',
                'hsl(351, 87%, 56%)',
                'transparent'
              ]
            }]
          }
        });
      }
    </script>
  </body>
</html>
